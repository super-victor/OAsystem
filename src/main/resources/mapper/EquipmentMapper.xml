<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sicnu.oasystem.mapper.EquipmentMapper">

    <insert id="addEquipment">
        insert into equipment(equipmentId,equipmentClassifyId,meetingRoomId,name,isMaintain,num)
        values (#{param1},#{param2},#{param3},#{param4},#{param5},#{param6})
    </insert>

    <update id="updateEquipment">
        update equipment set equipmentId=#{param1}
        <if test="param2 !=null">
            ,equipmentclassifyId=#{param2}
        </if>
        <if test="param3 !=null">
            ,meetingroomId=#{param3}
        </if>
        <if test="param4 !=null">
            ,name=#{param4}
        </if>
        <if test="param5">
            ,isMaintain=#{param5}
        </if>
        <if test="param6 !=0 and param6>=0">
            ,num=#{param6}
        </if>
        where equipmentId=#{param1}
    </update>

    <delete id="deleteEuipment">
        delete from equipment where equipmentId=#{equipmentId}
    </delete>
    <select id="getallEquipment" resultType="com.sicnu.oasystem.pojo.Equipment">
        select * from equipment
    </select>
    <select id="getEquipmentById" resultType="com.sicnu.oasystem.pojo.Equipment">
        select * from equipment where equipmentId=#{equipmentId}
    </select>
</mapper>