<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sicnu.oasystem.mapper.CardHolderMapper">

    <insert id="insertCardHolderByCardHolderId" useGeneratedKeys="true" keyProperty="cardHolderId">
        insert into CardHolder(name, ownerId) values(#{name}, #{ownerId})
    </insert>

    <update id="updateCardHolderNameByCardHolderId">
        update CardHolder set name = #{name} where cardHolderId = #{cardHolderId}
    </update>

    <delete id="deleteCardHolderByCardHolderId">
        delete from CardHolder where cardHolderId = #{cardHolderId}
    </delete>

    <select id="findCardHolderByEmployeeId" resultType="com.sicnu.oasystem.pojo.CardHolder">
        select * from CardHolder where ownerId = #{employeeId}
    </select>

    <select id="findCardHolderByName" resultType="com.sicnu.oasystem.pojo.CardHolder">
        select * from CardHolder where name = #{name} and ownerId = #{ownerId}
    </select>

    <select id="findCardHolderByCardHolderId" resultType="com.sicnu.oasystem.pojo.CardHolder">
        select * from CardHolder where cardHolderId = #{cardHolderId}
    </select>

    <select id="findCardHolderByCardHolderIdAndEmployeeId"
            resultType="com.sicnu.oasystem.pojo.CardHolder">
        select * from CardHolder where cardHolderId = #{cardHolderId} and ownerId = #{employeeId}
    </select>
</mapper>